<p id="notice"><%= notice %></p>

<h4>Turnos</h4>

<table class="table table-striped table-condensed table-hover "> 
  <thead>
    <tr>
      <th>Numero</th>
      <th>Nombre</th>
      <th>Asunto</th>
      <th>Descripcion</th>
      <th>Hora ingreso</th>
      <th>Hora atencion</th>
      <th>Hora finalizacion</th>
      <th>Usuario</th>
      <th>Comentario</th>
      <th>Estado</th>
      <th>Agencia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turnos.each do |turno| %>
      <tr>
        <td><%= turno.numero %></td>
        <td><%= turno.nombre %></td>
        <td><%= turno.asunto %></td>
        <td><%= turno.descripcion %></td>
        <td><%= turno.hora_ingreso %></td>
        <td><%= turno.hora_atencion %></td>
        <td><%= turno.hora_finalizacion %></td>
        <td><%= turno.usuario.nombre %></td>
        <td><%= turno.comentario %></td>
        <td><%= turno.estado %></td>
        <td><%= turno.agencia.nombre %></td>
        <td><%= link_to 'Mostrar', turno %></td>
        <td><%= link_to 'Editar', edit_turno_path(turno) %></td>
        <td><%= link_to 'Eliminar', turno, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Turno', new_turno_path, class: 'btn btn-primary' %>

<%= link_to 'Descargar csv', turnos_path(format: :csv), class: 'btn btn-primary'%>
